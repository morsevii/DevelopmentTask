@*View Task Modal*@
<div class="modal fade" id="modalViewTask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100 font-weight-bold">View Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                System:
                            </dt>
                            <dd>
                                <span id="lbl-systemname"></span>
                            </dd>
                            <dt>
                                Phase:
                            </dt>
                            <dd>
                                <span id="lbl-phase"></span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                Encoded By:
                            </dt>
                            <dd>
                                <span id="lbl-encby"></span>
                            </dd>
                            <dt>
                                Encoded Date:
                            </dt>
                            <dd>
                                <span id="lbl-encdate"></span>
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                Assigned To:
                            </dt>
                            <dd>
                                <span id="lbl-assignedto"></span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                Completion:
                            </dt>
                            <dd>
                                <span id="lbl-doneby"></span> - <span id="lbl-donedate"></span>
                            </dd>
                        </dl>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        <dl class="dl-horizontal">
                            <dt>
                                Title:
                            </dt>
                            <dd>
                                <span id="lbl-title"></span>
                            </dd>
                            <dt>
                                Details:
                            </dt>
                            <dd>
                                <p id="lbl-details"></p>
                                @*<span id="lbl-details"></span>*@
                            </dd>
                            <dt>
                                Remarks:
                            </dt>
                            <dd>
                                <p id="lbl-remarks"></p>
                            </dd>
                        </dl>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                Requested By:
                            </dt>
                            <dd>
                                <span id="lbl-reqby"></span>
                            </dd>
                            <dt>
                                Requested Date:
                            </dt>
                            <dd>
                                <span id="lbl-reqdate"></span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>
                                Modified By:
                            </dt>
                            <dd>
                                <span id="lbl-modby"></span>
                            </dd>
                            <dt>
                                Modified Date:
                            </dt>
                            <dd>
                                <span id="lbl-moddate"></span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="modal-footer d-flex">
                <button data-dismiss="modal" class="btn btn-primary">Close</button>
            </div>
        </div>
    </div>
</div>

