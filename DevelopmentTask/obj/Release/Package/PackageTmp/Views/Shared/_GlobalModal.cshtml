@*@*Add Task Modal*@
<div class="modal fade" id="modalCreateTask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form id="formAddTask">
                <div class="modal-header">
                    <h4 class="modal-title w-100 font-weight-bold">Create a task</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="form-group row">
                        <label for="ddl-systemlist" class="col-sm-2 col-form-label">System</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddl-systemlist">
                                <option value="0" selected disabled>Select a system</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ddl-phase" class="col-sm-2 col-form-label">Phase</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddl-phase">
                                <option value="0" selected disabled>Select a phase</option>
                                @for (var i = 1; i <= 20; i++)
                                {
                                    <option value="@i">Phase @i</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txt-title" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Difficulty</label>
                        <div class="col-sm-10">
                            <div class="form-check-inline">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" value="0" checked name="rad-difficulty"><span class="badge badge-danger">High</span>
                                </label>
                            </div>
                            <div class="form-check-inline">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" value="1" name="rad-difficulty"><span class="badge bg-warning">Medium</span>
                                </label>
                            </div>
                            <div class="form-check-inline disabled">
                                <label class="form-check-label">
                                    <input type="radio" class="form-check-input" value="2" name="rad-difficulty"><span class="badge bg-gradient-secondary">Low</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txt-details" class="col-sm-2 col-form-label">Details</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="txt-details"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ddl-mislist" class="col-sm-2 col-form-label">Assigned To</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddl-mislist">
                                <option value="0" selected>N/A</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ddl-reqlist" class="col-sm-2 col-form-label">Req.By</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="ddl-reqlist">
                                <option value="0" selected disabled>N/A</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="dt-reqdate" class="col-sm-2 col-form-label">Req.Date</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="dt-reqdate" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex">
                    <input type="reset" class="btn btn-default" value="Reset">
                    <button class="btn btn-success" id="btnAddTask">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

